
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project Time Logger</title>

    <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/js/site.js"></script>

    <script src="~/node_modules/jquery/dist/jquery.js"></script>
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.js"></script>


</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark" style="margin-bottom: 15px;">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Project Time Logger</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a asp-area="" asp-controller="Project" asp-action="Index" class="nav-link">Project</a>
                </li>
            </ul>
            <span class="navbar-text d-none d-md-block">
                Hello @UserManager.GetUserName(User)!
            </span>
        </div>
        
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - Project Time Logger</p>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
